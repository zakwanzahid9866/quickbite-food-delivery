# Print Agent Environment Configuration

# Backend connection
BACKEND_URL=http://localhost:3000
PRINT_AGENT_TOKEN=secure-print-agent-token-12345

# Agent identification
AGENT_ID=restaurant-main-pc
RESTAURANT_NAME=Fast Food Restaurant
RESTAURANT_ADDRESS=123 Main Street, City, State 12345
RESTAURANT_PHONE=(555) 123-4567

# Kitchen printer configuration (USB or Network)
KITCHEN_PRINTER_TYPE=network
KITCHEN_PRINTER_IP=192.168.1.100
KITCHEN_PRINTER_PORT=9100
# For USB: KITCHEN_PRINTER_VENDOR_ID=0x04b8
# For USB: KITCHEN_PRINTER_PRODUCT_ID=0x0202

# Customer receipt printer configuration
RECEIPT_PRINTER_TYPE=network
RECEIPT_PRINTER_IP=192.168.1.101
RECEIPT_PRINTER_PORT=9100

# Print settings
AUTO_CUT_ENABLED=true
PRINT_LOGO=false
LOGO_PATH=./assets/logo.png
RECEIPT_COPIES=1
KITCHEN_COPIES=1

# Retry settings
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=5000
QUEUE_PROCESS_INTERVAL=30000

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/print-agent.log

# Debug mode (prints to console instead of printer)
DEBUG_MODE=false