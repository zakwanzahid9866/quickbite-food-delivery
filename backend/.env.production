# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database Configuration - Production
DATABASE_URL=postgresql://user:password@host:port/database
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=quickbite_production
DB_USER=quickbite_user
DB_PASSWORD=your-secure-production-password

# Redis Configuration - Production
REDIS_URL=redis://your-redis-host:6379
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# JWT Configuration - Production
JWT_SECRET=your-super-secure-production-jwt-secret-key-minimum-256-bits
JWT_REFRESH_SECRET=your-super-secure-refresh-token-secret-key
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration - Production
CORS_ORIGINS=https://quickbite-customer.netlify.app,https://quickbite-admin.vercel.app,https://quickbite-kitchen.railway.app

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5000000
UPLOAD_PATH=uploads/

# External Services
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Monitoring
LOG_LEVEL=error
SENTRY_DSN=your-sentry-dsn

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHE=true
CACHE_TTL=3600