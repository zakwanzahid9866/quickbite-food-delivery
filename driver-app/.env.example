# Driver App Environment Variables

# Backend API
EXPO_PUBLIC_API_URL=http://localhost:3000
EXPO_PUBLIC_WS_URL=http://localhost:3000

# Google Maps API
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# App Configuration
EXPO_PUBLIC_APP_NAME=Fast Food Driver
EXPO_PUBLIC_SUPPORT_PHONE=+1-555-123-4567
EXPO_PUBLIC_SUPPORT_EMAIL=support@fastfooddelivery.com

# Location Tracking
EXPO_PUBLIC_LOCATION_UPDATE_INTERVAL=5000
EXPO_PUBLIC_BACKGROUND_LOCATION_ACCURACY=6
EXPO_PUBLIC_MIN_DISTANCE_FOR_UPDATE=10

# Feature Flags
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_BACKGROUND_LOCATION=true
EXPO_PUBLIC_ENABLE_CAMERA_CONFIRMATION=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true

# Development
EXPO_PUBLIC_DEBUG_MODE=false
EXPO_PUBLIC_MOCK_LOCATION=false